@page
@model LoginModel

@{
    ViewData["Title"] = "Bejelentkezés";
}

<div class="login-container">
    <div class="col-lg-6 login-form">
        <form id="account" method="post">
            <h2>@ViewData["Title"]</h2>
            <hr />
            <div class="form-group">
                <label asp-for="Input.Email">E-mail</label>
                <input asp-for="Input.Email" class="form-control" placeholder="valaki@gmail.com"/>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password">Jelszó</label>
                <input asp-for="Input.Password" class="form-control" placeholder="******"/>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="Input.RememberMe">
                        <input asp-for="Input.RememberMe" />
                        @*@Html.DisplayNameFor(m => m.Input.RememberMe)*@
                        Emlékezz rám.
                    </label>
                </div>
            </div>
            <button type="submit" class="btn btnSubmitLogin">Bejelentkezés</button>
            <div>
                <span id="regquestion">Nincs még felhasználói fiókod?</span>
                <a href="./Register" id="reg">Regisztráció</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}