@page
@model RegisterModel

@{
    ViewData["Title"] = "Regisztráció";
}

<div class="login-container">
    <div class="col-lg-6 register-form">
        <form method="post">
            <h2>@ViewData["Title"]</h2>
            <hr />
            <div class="form-group">
                <label asp-for="Input.FullName">Név</label>
                <input asp-for="Input.FullName" class="form-control" placeholder="Példa Elemér"/>
                <span asp-validation-for="Input.FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email">E-mail</label>
                <input asp-for="Input.Email" class="form-control" placeholder="valaki@gmail.com"/>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password">Jelszó</label>
                <input asp-for="Input.Password" class="form-control" placeholder="******"/>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword">Jelszó ismét</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="******"/>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btnSubmitRegister">Regisztráció</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}