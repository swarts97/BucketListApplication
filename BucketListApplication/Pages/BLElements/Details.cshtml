@page
@model BucketListApplication.Pages.BLElements.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Element</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BLElement.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BLElement.Name)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BLElement.ElementCategories)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Categories</th>
                </tr>
                @foreach (var item in Model.BLElement.ElementCategories)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Category.Name)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="Edit" asp-route-id="@Model.BLElement.ElementID">Edit</a> |
    <a asp-page="Index">Back to List</a>
</div>
