@page
@model BucketListApplication.Pages.BLElements.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>My BucketLists</h1>

<p>
    <a asp-page="CreateBucketList">Create New BucketList</a>
</p>
<p>
    <a asp-page="Create">Create New BucketListElement</a>
</p>

<form method="post">
    <div class="form-group">
        <label asp-for="SelectedBLID" class="control-label">Select a BucketList:</label>
        <select asp-for="SelectedBLID" class="form-control" asp-items="ViewBag.BucketList"></select>
    </div>
    <div class="form-group">
        <input type="submit" value="List" class="btn btn-primary" />
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SelectedBLElements[0].Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.SelectedBLElements)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ElementID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ElementID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ElementID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


