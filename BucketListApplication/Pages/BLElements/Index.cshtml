@page
@model BucketListApplication.Pages.BLElements.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New BucketListElement</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BucketListElements[0].Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.BucketListElements) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ElementID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ElementID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ElementID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<form method="post">
    <div class="form-group">
        <select id="ListSelect" name="ListSelect">
            <optgroup label="My Bucketlists:">
                @foreach (var list in Model.BucketLists)
                {
                    <option value="@list.Name">@list.Name</option>
                }
            </optgroup>
        </select>
    </div>
    <div class="form-group">
        <input type="submit" value="List" class="btn btn-primary" />
    </div>
</form>

    
