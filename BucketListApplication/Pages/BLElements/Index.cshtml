@page "{selectedbucketlist:int?}"
@model BucketListApplication.Pages.BLElements.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h3>Bakancslistáim</h3>

<div>
    <form method="post" id="bucketlistselectform">
        <select asp-for="SelectedBucketList.BucketListID" class="form-control BLselect" asp-items="Model.BucketListSL" onchange="SubmitBLEListing()"></select>
    </form>
    <a class="myBtn" id="addListBtn" asp-page="../BucketLists/CreateBucketList">Új lista</a>
    @if (Model.SelectedBucketList != null)
    {
        <a id="deleteBL" asp-page="../BucketLists/DeleteBucketList" asp-route-id="@Model.SelectedBucketList.BucketListID">Kiválasztott bakancslista törlése</a>
    }
</div>

@if (Model.SelectedBLElements != null)
{
    <table class="table">
        <tbody>
            @foreach (var item in Model.SelectedBLElements)
            {
                <tr class="tableRow">
                    <td align="center" class="checkCell">
                        @if (item.Completed)
                        {
                            <img class="completedImage" src="~/images/checked.png" />
                        }
                        else
                        {
                            <img class="completedImage" src="~/images/unchecked.png" />
                        }
                    </td>
                    <td class="goalCell">
                        <a class="goal" asp-page="./Details" asp-route-id="@item.ElementID">
                            @Html.DisplayFor(modelItem => item.Name)
                        </a>
                    </td>
                    <td class="progressionCell">
                        @if (item.Progression.BLETasks.Count != 0)
                        {
                            @Html.DisplayFor(modelItem => item.Progression.CompletedPercentage) <text> %</text>
                        }
                    </td>
                </tr>
            }
            <tr class="tableRow">
                <td class="checkCell"></td>
                <td class="goalCell">
                    @if (Model.SelectedBucketList != null)
                    {
                        <a asp-page="./Create" asp-route-bucketlistid="@Model.SelectedBucketList.BucketListID" class="myBtn submitBtn">Új elem</a>
                    }
                </td>
                <td class="progressionCell"></td>
            </tr>
        </tbody>
    </table>
}

@section Scripts
{
    <script>
        function SubmitBLEListing() {
            var selectlist = document.getElementById("SelectedBucketList_BucketListID");
            var option = selectlist.options[selectlist.selectedIndex];
            if (option.value != "null")
                document.getElementById("bucketlistselectform").submit();
        }
    </script>
}

<style>
    body {
        background-color: #25272a;
    }

    h3 {
        color: white;
        margin-bottom: 1.5rem;
    }

    #bucketlistselectform {
        display: inline;
    }

    .BLselect {
        display: inline;
        width: 30%;
        background-color: #2f3136;
        border-color: #18191c;
        color: white;
    }

    .BLselect:focus {
        width: 30%;
        background-color: #2f3136;
        border-color: #677bc4;
        color: white;
        box-shadow: none;
    }

    #deleteBL {
        display: block;
        color: #677bc4;
        margin-left: 0.5rem;
        margin-bottom: 20px;
        font-size: 12px;
    }

    .table > tbody > tr > td {
        border-top: none;
    }

    .tableRow {
        display: flex;
        align-items: center;
    }

    .checkCell {
        display: block;
        width: 7.5%;
    }

    .goalCell {
        align-items: center;
        width: 85%;
    }

    .progressionCell {
        text-align: center;
        width: 7.5%;
    }

    .completedImage {
        height: 3rem;
        width: 3rem;
    }

    .goal {
        display: inline-block;
        width: 100%;
        line-height: 3rem;
        text-align: start;
        background-color: #36393f;
        border-radius: 0.5rem;
        border: 1px solid #18191c;
        padding-left: 10px;
        padding-right: 10px;
        color: white;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
    }

    .goal:hover{
        color: white;
        background-color: #2f3136;
        border-color: #18191c;
        text-decoration: none;
    }

    .goal:focus {
        box-shadow: 0 0 0 0.1rem #9b9da1;
    }

    #addListBtn {
        background-color: #616466;
        font-size: 0.85rem;
        padding: 4px;
        margin-left: 10px;
    }

    #addListBtn:hover {
        color: white;
        background-color: #36393f;
        text-decoration: none;
    }
</style>