@page
@model BucketListApplication.Pages.Social.IndexModel

@{
    ViewData["Title"] = "Mások bakancslistái";
}

<section class="col-lg-6">
    <div class="mt-40">
        <form asp-page="./Index" method="get">
            <label for="SearchString" class="control-label">Keress név alapján:</label>
            <div class="form-group" style="display: flex; align-items: center;">
                <input class="form-control input" type="text" name="searchString" id="searchString" value="@Model.SearchString" />
                <input type="submit" value="Keresés" class="btn myBtn submitBtn" />
            </div>
        </form>
    </div>
    <table class="table">
        @if (Model.ListedUsers != null)
        {
            @foreach (var item in Model.ListedUsers)
            {
                <tr>
                    <td style="font-size: 1.5rem">
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td style="vertical-align: middle">
                        <a asp-page="./UserCheck" asp-route-userId="@item.Id">Megtekintés</a>
                    </td>
                </tr>
            }
        }
    </table>
</section>