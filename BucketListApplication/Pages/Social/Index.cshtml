@page
@model BucketListApplication.Pages.Social.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Tekintsd meg mások bakancslistáját!</h1>

<form asp-page="./Index" method="get">
    <div class="form-actions no-color">
        <p>
            Keress név alapján:
            <input type="text" name="SearchString" value="@Model.CurrentFilter" />
            <input type="submit" value="Keresés" class="btn btn-primary" /> |
            <a asp-page="./Index">Vissza a teljes listához</a>
        </p>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                Teljes név
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Users != null)
        {
            @foreach (var item in Model.Users)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        <a asp-page="./UserCheck" asp-route-id="@item.Id">Választ</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
