@page
@model BucketListApplication.Pages.Social.UserCheckModel

@{
    ViewData["Title"] = "Index";
}

<h1>@Model.Title</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="SelectedBucketList.BucketListID" class="control-label">Válassz egy listát:</label>
        <select asp-for="SelectedBucketList.BucketListID" class="form-control" asp-items="Model.BucketListSL"></select>
    </div>
    <div class="form-group">
        <input type="submit" value="Listáz" class="btn btn-primary" />
    </div>
</form>

@if (Model.SelectedBLElements != null)
{
    <table class="table">
        <tbody>
            <tr>
                <td class="font-weight-bold">
                    Cél
                </td>
                <td align="center" class="font-weight-bold">
                    Teljesítve
                </td>
            </tr>
            @foreach (var item in Model.SelectedBLElements)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td align="center">
                        @Html.DisplayFor(modelItem => item.Completed)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<div>
    <a asp-page="./Index">Vissza</a>
</div>


