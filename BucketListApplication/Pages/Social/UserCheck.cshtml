@page
@model BucketListApplication.Pages.Social.UserCheckModel

@{
    ViewData["Title"] = "Index";
}

<h1>@Model.Title</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="SelectedBucketList.BucketListID" class="control-label">Select a BucketList:</label>
        <select asp-for="SelectedBucketList.BucketListID" class="form-control" asp-items="Model.BucketListSL"></select>
    </div>
    <div class="form-group">
        <input type="submit" value="List" class="btn btn-primary" />
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SelectedBLElements.ElementAt(0).Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.SelectedBLElements != null)
        {
            @foreach (var item in Model.SelectedBLElements)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<div>
    <a asp-page="Index">Go back</a>
</div>

    
