@using Microsoft.AspNetCore.Identity
@using BucketListApplication.Models
@inject SignInManager<BLUser> SignInManager
@inject UserManager<BLUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a class="nav-link btn btn-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Profil</a>
    </li>
    <li class="nav-item">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post" >
            <button type="submit" class="nav-link btn btn-link" id="logout">Kijelentkezés</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link btn btn-link" asp-area="Identity" asp-page="/Account/Login">Bejelentkezés</a>
    </li>
}
</ul>

<style>
    #logout:hover, #logout:focus {
        color: #cbd3da !important;
    }
</style>
